{
  "name": "wave-client-js",
  "version": "1.0.0",
  "description": "JavaScript client for the WAVE Backend API",
  "main": "javascript/wave-client.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint javascript/",
    "lint:fix": "eslint javascript/ --fix", 
    "format:check": "prettier --check javascript/",
    "format": "prettier --write javascript/",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^4.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["**/javascript/**/*.test.js"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}